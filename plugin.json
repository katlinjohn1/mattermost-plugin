{
    "id": "com.mattermost.demo-plugin",
    "name": "Request Form",
    "description": "This plugin uses a /slash command to open a form to request help.",
    "homepage_url": "https://github.com/katlinjohn1/mattermost-plugin",
    "support_url": "https://github.com/katlinjohn1/mattermost-plugin/issues",
    "version": "0.10.0",
    "min_server_version": "7.9.0",
    "server": {
        "executables": {
            "linux-amd64": "plugin.exe"
        }
    },
    "settings_schema": {
        "header": "Header: Configure your demo plugin settings below.",
        "settings": [
            {
                "key": "ChannelID",
                "display_name": "Channel ID:",
                "type": "text",
                "help_text": "The channel ID that the /slash command message will be sent to.",
                "placeholder": "demo_plugin",
                "default": "demo_plugin"
            },
            {
                "key": "Username",
                "display_name": "Username:",
                "type": "text",
                "help_text": "The user to use as part of the demo plugin, created automatically if it does not exist.",
                "placeholder": "demo_plugin",
                "default": "demo_plugin"
            },
            {
                "key": "TagUsers",
                "display_name": "Tag Users",
                "type": "text",
                "help_text": "Enter usernames seperated by commas."
            }
        ]
    },
    "props": {
        "support_packet": "Demo plugin support packet"
    }
}

